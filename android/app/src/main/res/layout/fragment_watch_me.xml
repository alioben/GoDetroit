<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="acb.godetroit.notsafe.godetroit.Views.FragmentWatchMe">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select a contact to watch you on your way."
        android:id="@+id/textGuideContacts"
        android:layout_above="@+id/select_con"
        android:gravity="center"
        android:textSize="17dp"
        android:padding="20dp"/>

    <Button
        android:layout_height="200dp"
        android:layout_width="200dp"
        android:text="WATCH ME"
        android:layout_centerInParent="true"
        android:background="@drawable/round_button"
        android:textColor="#fff"
        android:textSize="17dp"
        android:id="@+id/select_con"
        android:padding="30dp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:id="@+id/layout_watchme"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/watchme_text"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12pt"
            android:textColor="#000"
            android:textAlignment="center"
            android:gravity="center"/>

        <Button
            android:id="@+id/stop_butt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="STOP WATCH ME"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

</RelativeLayout>
